<p>
  <strong>Title:</strong>
  <%= bike.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= bike.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= bike.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= bike.status %>
</p>

<%= link_to 'Edit', edit_bike_path(bike) %> |
<td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>

<button toggles='<%= "#bike-#{bike.id}-comments" %>'
        name='<%= "#bike-#{bike.id}-comments" %>'>
  comments
</button>
<div id="<%= "bike-#{bike.id}-comments" %>" class='hidden'>
  <% bike.comments.each do |comment| %>
    <%= render "comments/show", comment: comment %>
  <% end %>
</div>



<br>
<button toggles='#new-comment'>
  <b> New comment </b>
</button>

<div class='hidden' id="new-comment">
  <%= render "comments/form", bike: bike %>
</div>

