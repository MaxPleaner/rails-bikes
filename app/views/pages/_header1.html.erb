<div class="header">
  <% if current_user %>
    logged in as <%= current_user.username %>
  <% end %>
  <%= button_to 'root', '/', method: 'get' %>
  <% if current_user %>
    <%= button_to "profile", edit_user_path(current_user.id), method: "get" %>
    <%= button_to 'logout', '/logout', method: "post" %>
  <% else %>
    <%= button_to "register", '/users/new', method: "get" %>
    <%= button_to "login", '/login', method: "get" %>
  <% end %>
</div>
